https://leetcode.com/problems/longest-subarray-with-maximum-bitwise-and/description/

class Solution {
    public int longestSubarray(int[] nums) {
 int maxi=nums[0];
        int result=0;
        int streak=0;
        for (int i=0;i<nums.length;i++)
        {
            if (nums[i]>maxi)
            {
                maxi=nums[i];
                result=0;
                streak=0;
            }

            if (maxi==nums[i])
            {
                streak++;
            }
            else {
                streak=0;
            }

            result=Math.max(result,streak);
        }
        
        return result; 
    }
}

https://leetcode.com/problems/count-all-valid-pickup-and-delivery-options/description

class Solution {
public:
    int countOrders(int n) {
        
          if(n==0)
        {
            return 0;
        }
        
        int mod=1000000007;
        
        long res=1;
        for(int i=1;i<=n;i++)
        {
            res=(res*i)%mod;
            res=(res* ( 2*i-1))%mod;
            
        }
        
        
        return res;
        
    }
};
